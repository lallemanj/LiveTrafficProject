@model IEnumerable<LiveTrafficProject.Models.Properties>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
  <form method = "get" asp-action="Index" name ="eerste">
    <input  class="form-control me-2" type="text" id ="traffic" placeholder="Traffic" aria-label="Traffic" name="traffic" value = "Traffic">
    <button name="button"  value="trafficBtn"  id ="traffic"  class="btn btn-outline-success"  type="submit" >Search</button>
    </form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IconCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MagnitudeOfDelay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.From)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.To)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Delay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeValidity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
         @if (ViewBag.traffic != null)
        {
            @foreach (var item in ViewBag.traffic.incidents)

                {
                    <tr>
                            <td>
                            @item.properties.IconCategory
                           
                            </td>
                            <td>
                            @item.properties.MagnitudeOfDelay
                            
                            </td>
                            <td>
                            @item.properties.StartTime
                            
                            </td>
                            <td>
                            @item.properties.EndTime
                            
                            </td>
                            <td>
                            @item.properties.From
                           </td>
                           <td>
                            @item.properties.To
                            
                            </td>
                            <td>
                            @item.properties.Length
                            
                            </td>
                            <td>
                            @item.properties.Delay
                            
                            </td>
                            <td>
                            @item.properties.TimeValidity
                            
                            </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
    </tbody>
</table>
